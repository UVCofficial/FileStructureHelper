{
  "name": "file-structure-helper",
  "displayName": "File Structure Helper",
  "description": "An extension that help you easily copy the file structure of current project. It also enables you to search file using (part of) filename.",
  "publisher": "UsefulTools",
  "version": "1.0.2",
  "icon": "images/logo.jpeg",
  "homepage": "https://github.com/UVCofficial/FileStructureHelper#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/UVCofficial/FileStructureHelper.git"
  },
  "bugs": {
    "url": "https://github.com/UVCofficial/FileStructureHelper/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "file structure",
    "project structure",
    "file search",
    "copy structure",
    "llm",
    "tree"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-structure-helper.generateFileTree",
        "title": "Generate File Tree",
        "category": "File Structure Helper",
        "icon": "$(list-tree)"
      },
      {
        "command": "file-structure-helper.searchFiles",
        "title": "Search Files",
        "category": "File Structure Helper",
        "icon": "$(search)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "file-structure-helper.generateFileTree",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "file-structure-helper.searchFiles",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "explorer/context": [
        {
          "command": "file-structure-helper.generateFileTree",
          "group": "navigation",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "configuration": {
      "title": "File Structure Helper",
      "properties": {
        "file-structure-helper.tree.ignore": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/dist/**",
            "**/build/**",
            "**/.vscode/**",
            "**/*.log",
            "**/coverage/**",
            "**/.nyc_output/**",
            "**/.DS_Store",
            "**/Thumbs.db"
          ],
          "description": "Patterns to ignore when generating file tree"
        },
        "file-structure-helper.tree.maxDepth": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum depth for file tree generation"
        },
        "file-structure-helper.tree.includeHidden": {
          "type": "boolean",
          "default": false,
          "description": "Whether to include hidden files in the tree"
        },
        "file-structure-helper.search.includeHidden": {
          "type": "boolean",
          "default": false,
          "description": "Whether to include hidden files in search results"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileStructureHelperSidebar",
          "title": "File Structure Helper",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "fileStructureHelperSidebar": [
        {
          "id": "fileStructureHelperView",
          "name": "Tools",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}